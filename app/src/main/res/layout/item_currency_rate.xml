<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currencyrateitem"
            type="me.maxdev.currencyconverter.ui.currencyconverter.CurrencyRateItem" />

        <variable
            name="vm"
            type="me.maxdev.currencyconverter.ui.currencyconverter.CurrencyConverterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:text="@{currencyrateitem.name}" />

    </LinearLayout>
</layout>
